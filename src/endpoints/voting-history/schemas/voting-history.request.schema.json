{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "voting-history.request.schema.json",
    "title": "/voting_history?dacId=${dacId}&voter={voter}&skip={skip}&limit={limit} request schema",
    "type": "object",
    "properties": {
        "query": {
            "type": "object",
            "properties": {
                "dacId": {
                    "$ref": "#/$defs/dacId"
                },
                "voter": {
                    "$ref": "#/$defs/walletId"
                },
                "skip": {
                    "$ref": "#/$defs/zeroOrGreaterInteger"
                },
                "limit": {
                    "$ref": "#/$defs/positiveInteger"
                }
            },
            "required": [
                "dacId",
                "voter"
            ]
        }
    },
    "$defs": {
        "dacId": {
            "type": "string",
            "minLength": 5,
            "maxLength": 6
        },
        "walletId": {
            "type": "string",
            "minLength": 1
        },
        "zeroOrGreaterInteger": {
            "type": "integer",
            "minimum": 0
        },
        "positiveInteger": {
            "type": "integer",
            "minimum": 1
        }
    }
}